{
  "name": "hub-marketplaces",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run start:dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build -w packages/shared && npm run build -w backend && npm run build -w frontend",
    "build:shared": "npm run build -w packages/shared"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}