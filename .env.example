# API Configuration
API_URL=https://seu-server.com

# Frontend Configuration
VITE_API_URL=https://seu-server.com

# App URLs (Backend)
BACKEND_URL=https://seu-server.com
FRONTEND_URL=https://seu-frontend.com
PORT=3000

# CORS (comma-separated, regex allowed with /.../)
CORS_ORIGINS=https://seu-frontend.com,https://seu-server.com

# Database (Backend)
DATABASE_URL=postgresql://user:password@localhost:5432/jaspi_hub
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=jaspi_hub

# JWT Secrets (Backend)
JWT_SECRET=sua-chave-super-secreta-aqui
JWT_EXPIRES_IN=24h

# Marketplace (Backend)
ML_APP_ID=seu-app-id
ML_CLIENT_SECRET=seu-client-secret
ML_REDIRECT_URI=https://seu-server.com/marketplace/mercadolivre/callback
SHOPEE_PARTNER_ID=seu-partner-id
SHOPEE_PARTNER_KEY=seu-partner-key
SHOPEE_REDIRECT_URI=https://seu-server.com/marketplace/shopee/callback

# Email Configuration (Backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-ou-token-aqui

# AWS S3 (opcional, para uploads)
AWS_ACCESS_KEY_ID=sua-access-key
AWS_SECRET_ACCESS_KEY=sua-secret-key
AWS_S3_BUCKET=seu-bucket-name
AWS_REGION=us-east-1

# Testing
TEST_PASSWORD=gerado-aleatoriamente-em-tempo-de-execução
NODE_ENV=development
